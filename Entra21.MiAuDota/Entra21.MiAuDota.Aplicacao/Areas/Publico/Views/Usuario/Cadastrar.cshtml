@model UsuarioCadastrarViewModel

<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>
<body>

    <div class="mx-auto" style="width: 500px;">

        <div class="page vertical-align text-center">
            <div class="brand">
                <img class="brand-img" src="~/theme/assets//images/logo.png" alt="...">
            </div>
            <div>
                <h5>Novo por aqui?</h5>
                <h5>Cadastre-se para adotar o seu melhor amigo</h5>
            </div>
        </div>

        <form asp-action="Cadastrar" method="post" class="row g-3">
            <div class="col-12">
                <label asp-for="Nome" class="form-label" span-required="">Nome Completo</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col-md-7">
                <label asp-for="Cpf" class="form-label" span-required="">CPF</label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>

            <div class="col-md-5">
                <label asp-for="DataNascimento" class="form-label" span-required="">Data de Nascimento</label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Endereco" class="form-label" span-required="">Endereço Completo</label>
                <input asp-for="Endereco" class="form-control" placeholder="Rua XV de Novembro, 123, Centro, Blumenau, SC" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>

            <div class="col-md-7">
                <label asp-for="Email" class="form-label" span-required="">Email</label>
                <input asp-for="Email" class="form-control" placeholder="seuemail@exemplo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-5">
                <label asp-for="Celular" class="form-label" span-required="">Celular</label>
                <input asp-for="Celular" class="form-control" placeholder="(00) 00000-0000" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="Senha" class="password" span-required="">Senha</label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="ConfirmarSenha" class="password" span-required="">Confirmar Senha</label>
                <input asp-for="ConfirmarSenha" class="form-control" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input asp-for="EhVoluntario" class="form-check-input" span-required="" type="checkbox">
                    <label asp-for="EhVoluntario" class="form-check-label" for="gridCheck">
                        Quero ser voluntário!
                    </label>
                    <span asp-validation-for="EhVoluntario" class="text-danger"></span>
                </div>
            </div>

            @*<div class="col-12">
            <a asp-action="Cadastrar"> </a> <button type="submit" class="btn btn-success">
            <i class="fa-solid fa-floppy-disk"></i> Salvar
            </button>
            </div>*@

            @*<div class="text-end">
                <a asp-action="Cadastrar"> </a> <button type="submit" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Salvar</button>
            </div>*@

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Cadastrar"/> <button type="submit" class="btn btn-success">Salvar</button>
            </div>

        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
</body>
</html>