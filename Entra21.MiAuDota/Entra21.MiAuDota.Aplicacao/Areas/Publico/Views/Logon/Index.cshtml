@model LogonViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Miaudota - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <style type="text/css">
        body {
            background-color: #FDECEB;
        }

        h5 {
            color: #8E37A6;
            font-weight: 500;
            font-size: 18px;
            margin: 0;
        }

        .brand-img {
            max-width: 200px;
            max-height: 150px
        }

        .form-group {
            color: #582B5C;
            font-size: 16px;
            font-weight: 500;
            padding: 6px 20px;
        }

        .form-control {
            border-color: #582B5C;
        }

        .form-check-input {
            border-color: #582B5C;
        }

        .form-check-input:checked {
                background-color: #582B5C;
                border-color: #582B5C;
        }

        .brand {
            margin: 20px 0;
        }

        .initial-text {
            margin: 0 0 20px 0;
        }

        .btn-entrar {
            padding: 6px 20px;
            background-color: #582b5cc9;
            border-color: #582b5cc9;
            border-width: 1px;
            border-radius: 0.375rem;
            color: white;
            padding: 6px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 18px;
            font-weight: 500;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

        .btn-entrar:hover {
                    background-color: #582B5C;
                    border-color: #582B5C;
                    color: white;
        }
    </style>

</head>
<body>
    <div class="mx-auto" style="width: 500px;">
        <div class="page vertical-align text-center">
            <div class="brand">
                <img class="brand-img" src="~/theme/assets//images/logopreview.png.png" />
            </div>
            <div class="initial-text">
                <h5>E ai? Bora adotar?</h5>
                <h5>Faça login e encontre seu pet.</h5>
            </div>
        </div>

        <form asp-controller="Logon" asp-action="Logon" method="post">
            <div class="form-group">
                <label asp-for="Email" class="sr-only" for="inputEmail">Email</label>
                <input asp-for="Email" type="text" class="form-control" id="inputEmail" name="email" placeholder="seuemail@exemplo.com">
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="sr-only">Senha</label>
                <input asp-for="Senha" type="password" class="form-control">
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn-entrar">Entrar</button>
            </div>
        </form>
        <p>
            Não possue uma conta? Por favor,
            <a href="https://localhost:7194/" class="float-right" data-toggle="modal" data-target="#cadastroModal" data-mdb-dismiss="loginModal">cadastre-se. <span aria-hidden="true"></span></a>
        </p>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
</body>
</html>