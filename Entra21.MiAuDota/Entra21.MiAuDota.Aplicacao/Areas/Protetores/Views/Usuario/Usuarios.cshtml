@{
    ViewData["Title"] = "Home page";
}

<style type="text/css">
     body {
         background-color: #FDECEB;
     }

     .main {
         margin: 80px 0 0 0;
     }

     .area-texto {
         padding: 15px;
         text-align: center;
     }

     h3 {
         color: #8E37A6;
         font-weight: 500;
         font-size: 28px;
         padding: 0;
         margin: 0;
     }

     p {
         color: #8E37A6;
         font-weight: 400;
         font-size: 20px;
         padding: 0;
         margin: 0;
     }

     .tabela{
         margin: auto;
         width: 1000px !important;

     }

</style>

<body>
    <div class="main">
        <div class="area-texto">
            <h3>Lista de usuários:</h3>
        </div>

        <div class="tabela">
            <table class="table table-striped table-bordered" id="tabela-usuarios">
                <thead>
                    <tr>
                        <th width="10%">Id</th>
                        <th width="20%">Nome</th>
                        <th width="20%">Celular</th>
                        <th width="35%">Email</th>
                        <th width="15%">É voluntário?</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</body>

@section Scripts{
    <script src="~/js/usuario/usuario-datatable.js"></script>
    }